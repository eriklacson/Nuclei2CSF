# .editorconfig â€“ root of project
root = true                       # stop searching past this file

# ---------------------------------
# Default rules for all text files
[*]
end_of_line       = lf            # Unix line endings
charset           = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# ---------------------------------
# Python source
[*.py]
indent_style      = space
indent_size       = 4

# ---------------------------------
# Markdown & reStructuredText docs
[*.{md,rst}]
trim_trailing_whitespace = false  # keep spaces for line-breaks
max_line_length  = off            # let docs wrap freely
